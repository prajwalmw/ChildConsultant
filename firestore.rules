rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================
    // HELPER FUNCTIONS
    // ============================================

    // Check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Check if user is accessing their own document
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Get user role from Firestore
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    // Check if user is admin
    function isAdmin() {
      return isSignedIn() && getUserRole() == 'admin';
    }

    // Check if user is doctor
    function isDoctor() {
      return isSignedIn() && getUserRole() == 'doctor';
    }

    // ============================================
    // USERS COLLECTION
    // ============================================
    match /users/{userId} {
      // All authenticated users can read user profiles
      allow read: if isSignedIn();

      // Users can update their own profile, admins can update any
      allow write: if isOwner(userId) || isAdmin();
    }

    // ============================================
    // PATIENTS COLLECTION WITH NESTED SUBCOLLECTIONS
    // ============================================
    match /patients/{parentKey} {
      // TEMPORARILY OPEN FOR TESTING - TODO: Restrict back to isSignedIn()
      allow read, write: if true;

      // NESTED: Children subcollection
      match /children/{childId} {
        // TEMPORARILY OPEN FOR TESTING
        allow read, write: if true;

        // NESTED: Consultations subcollection
        match /consultations/{consultationId} {
          // TEMPORARILY OPEN FOR TESTING
          allow read, write: if true;
        }
      }
    }

    // ============================================
    // COLLECTION GROUP QUERIES
    // ============================================
    // Allow collectionGroup queries on consultations for admins and doctors
    match /{path=**}/consultations/{consultationId} {
      allow read: if isSignedIn() && (isAdmin() || isDoctor());
      allow write: if isSignedIn() && (isAdmin() || isDoctor());
    }

    // ============================================
    // INQUIRIES COLLECTION (Contact Form)
    // ============================================
    match /inquiries/{inquiryId} {
      // Admins and doctors can read inquiries
      allow read: if isAdmin() || isDoctor();

      // Anyone can create an inquiry (contact form)
      allow create: if true;

      // Only admins can update/delete
      allow update, delete: if isAdmin();
    }

    // ============================================
    // DOCTORS COLLECTION
    // ============================================
    match /doctors/{doctorId} {
      // Anyone can read active doctors (public data)
      allow read: if true;

      // Only admins can write doctor data
      allow write: if isAdmin();
    }

    // ============================================
    // BOOKINGS COLLECTION (Package Bookings)
    // ============================================
    match /bookings/{bookingId} {
      // Users can read their own bookings, admins can read all
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());

      // Authenticated users can create bookings
      allow create: if isSignedIn();

      // Only admins can update/delete bookings
      allow update, delete: if isAdmin();
    }

    // ============================================
    // DOCTOR_BOOKINGS COLLECTION (Doctor Consultation Bookings)
    // ============================================
    match /doctor_bookings/{bookingId} {
      // Users can read their own bookings, admins and doctors can read all
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin() || isDoctor());

      // Authenticated users can create bookings
      allow create: if isSignedIn();

      // Only admins can update/delete bookings
      allow update, delete: if isAdmin();
    }

    // ============================================
    // FAILED_PAYMENTS COLLECTION (Payment Error Logs)
    // ============================================
    match /failed_payments/{paymentId} {
      // Only admins can read failed payments
      allow read: if isAdmin();

      // Anyone can create failed payment logs (for error tracking)
      allow create: if true;

      // Only admins can delete
      allow delete: if isAdmin();
    }

    // ============================================
    // DEFAULT DENY ALL OTHER COLLECTIONS
    // ============================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
